
  <!DOCTYPE html>
  <html>
  <head>
      <title>Update page</title>
      <style>
      table.center {
            margin-left: auto;
            margin-right: auto;
          }
      </style>
  </head>
  <body>
    <form method="post">
      <fieldset>
        <legend>Update Employee profile</legend>
        <table class="center">
          <tr>
            <td>Employee ID </td>
            <td>:<%= user.id %></td>
          </tr>
          <tr>
            <td>Employee name </td>
            <td>:<%= user.name %></td>
          </tr>
          <tr>
            <td>Employee Username</td>
            <td><input type="text" value="<%= user.username %>" name="username" ></td>
            <% if (error.username) { %>
            <td><span style="color: red;"><%= error.username.msg %></span><td>
            <% } %>
          </tr>
          <tr>
            <td>Employee Password</td>
            <td><input type="password" value="<%= user.password %>" name="password" ></td>
            <% if (error.password) { %>
            <td><span style="color: red;"><%= error.password.msg %></span><td>
            <% } %>
          </tr>
          <tr>
            <td>Employee Phone</td>
            <td><input type="text" value="<%= user.phone %>"  name="phone"></td>
            <% if (error.phone) { %>
            <td><span style="color: red;"><%= error.phone.msg %></span><td>
            <% } %>
          </tr>
          <tr>
            <td></td>
            <td><button type="submit" name"choice" value="Update" class="btn btn-primary">Update</button></td>
          </tr>
        </table>
    </fieldset>
  </form>
  <table class="center">
      <tr>
        <td><a href="/admin/AllEmployeeList">Back</a>|
      	<a href="/logout">Logout</a></td>
      </tr>
  </table>
</body>
</html>
